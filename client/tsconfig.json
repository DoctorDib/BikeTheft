{
    "compilerOptions": {
      "experimentalDecorators": true,
      "outDir": "./public/",
      "noImplicitAny": true,
      "module": "es2020",
      "target": "es6",
      "jsx": "react",
      "allowJs": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports" : true,
      "esModuleInterop" : true,
      "lib": [
        "es6", 
        "dom",
        "dom.iterable",
      ],
      "noImplicitThis": true,
      "strictNullChecks": true,
      "strict": true,
      "moduleResolution": "node",
      "types" : ["material-ui"],
      "resolveJsonModule": true,
      "incremental": true,
      "watch": true,
      "forceConsistentCasingInFileNames": true,
      "importsNotUsedAsValues": "preserve",
      "importHelpers": true,
    },
}